-- Create a database called 'stocks'.
-- Then use the query below for the 'stocks' database.

BEGIN;

CREATE TABLE IF NOT EXISTS public.tech_stocks
(
    date date,
    apple_open double precision,
    apple_high double precision,
    apple_low double precision,
    apple_volume integer,
    microsoft_open double precision,
    microsoft_high double precision,
    microsoft_low double precision,
    microsoft_close double precision,
    microsoft_volume integer,
    PRIMARY KEY (date)
);
END;